// toast.jsx
import React from "react";

export default function Toast({ type = "info", children, onClose }) {
  const bg = {
    info:    "bg-blue-600",
    success: "bg-green-600",
    error:   "bg-red-600",
  }[type] || "bg-gray-600";

  return (
    <div className={`${bg} text-white px-4 py-2 rounded fixed top-4 right-4 shadow-lg flex items-center`}>
      <span className="flex-1">{children}</span>
      <button onClick={onClose} className="ml-2 font-bold">Ã—</button>
    </div>
  );
}
